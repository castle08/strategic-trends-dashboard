{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "STATE_OF_WORLD",
    "AI_INSIGHT",
    "LIVE_SIGNALS",
    "BRAND_OPPORTUNITIES",
    "COMPETITIVE_THREATS",
    "SIGNAL_TICKER"
  ],
  "properties": {
    "STATE_OF_WORLD": {
      "type": "object",
      "description": "Macro view for the current week",
      "required": ["thesis", "velocityPercent", "velocitySpark", "movers"],
      "properties": {
        "thesis": {
          "type": "string",
          "description": "Single-sentence macro thesis"
        },
        "velocityPercent": {
          "type": "integer",
          "minimum": -500,
          "maximum": 500,
          "description": "Week-over-week composite momentum as a %"
        },
        "velocitySpark": {
          "type": "array",
          "items": { "type": "integer", "minimum": 0, "maximum": 100 },
          "minItems": 8,
          "maxItems": 8,
          "description": "8-week sparkline values (0–100)"
        },
        "movers": {
          "type": "array",
          "minItems": 3,
          "maxItems": 4,
          "items": {
            "type": "object",
            "required": ["label", "deltaPercent"],
            "properties": {
              "label": { "type": "string" },
              "deltaPercent": { "type": "integer", "minimum": -500, "maximum": 500 }
            }
          },
          "description": "Top accelerating themes/categories"
        }
      }
    },

    "AI_INSIGHT": {
      "type": "object",
      "description": "One strategic AI headline + short implications",
      "required": ["title", "bullets"],
      "properties": {
        "title": { "type": "string" },
        "bullets": {
          "type": "array",
          "minItems": 3,
          "maxItems": 5,
          "items": { "type": "string" }
        }
      }
    },

    "LIVE_SIGNALS": {
      "type": "array",
      "description": "Recent, named signals backing the dashboard",
      "minItems": 3,
      "maxItems": 8,
      "items": {
        "type": "object",
        "required": ["event", "source", "date", "whyItMatters"],
        "properties": {
          "event": { "type": "string" },
          "source": { "type": "string", "description": "Brand/platform/regulator" },
          "date": { "type": "string", "description": "Date in YYYY-MM-DD format" },
          "whyItMatters": { "type": "string" }
        }
      }
    },

    "BRAND_OPPORTUNITIES": {
      "type": "array",
      "description": "2–4 opportunities with evidence and an action play",
      "minItems": 2,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": ["title", "level", "whyNow", "signals", "play"],
        "properties": {
          "title": { "type": "string" },
          "level": { "type": "string", "enum": ["High", "Medium", "Low"] },
          "whyNow": { "type": "string" },
          "signals": {
            "type": "array",
            "minItems": 1,
            "maxItems": 4,
            "items": { "type": "string" }
          },
          "play": { "type": "string", "description": "Specific action to execute" }
        }
      }
    },

    "COMPETITIVE_THREATS": {
      "type": "array",
      "description": "2–4 competitor moves with a concrete response",
      "minItems": 2,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": ["brand", "move", "urgency", "seen", "action"],
        "properties": {
          "brand": { "type": "string" },
          "move": { "type": "string" },
          "urgency": { "type": "string", "enum": ["High", "Medium", "Low"] },
          "seen": { "type": "string", "description": "e.g., '6 days ago'" },
          "action": { "type": "string" }
        }
      }
    },

    "SIGNAL_TICKER": {
      "type": "array",
      "description": "Short, scannable ticker items",
      "minItems": 3,
      "maxItems": 6,
      "items": { "type": "string" }
    }
  }
}
